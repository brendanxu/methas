{
  "name": "southpole-official",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:standalone": "BUILD_STANDALONE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/generate-brand-assets.js && npm install",
    "optimize-images": "node scripts/optimize-images.js",
    "image-utils": "node scripts/image-utils.js",
    "generate-blur": "node scripts/image-utils.js blur",
    "image-metadata": "node scripts/image-utils.js metadata",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "bundle-report": "npx webpack-bundle-analyzer .next/analyze/bundle/client.html",
    "bundle-analyze": "node scripts/analyze-bundle.js",
    "perf:audit": "lhci autorun",
    "perf:collect": "lhci collect",
    "perf:assert": "lhci assert",
    "perf:upload": "lhci upload",
    "perf:server": "lhci server",
    "perf:ci": "npm run build && lhci autorun",
    "test:performance": "npm run perf:ci",
    "monitor:lighthouse": "lhci autorun --config=lighthouserc.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:ci": "npm run type-check && npm run lint && npm run test:ci",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf .next && rm -rf out && rm -rf dist && rm -rf coverage",
    "clean:cache": "npm run clean && rm -rf node_modules/.cache",
    "release": "npm run clean && npm run validate:ci && npm run build:production"
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.1",
    "@heroicons/react": "^2.2.0",
    "@sendgrid/mail": "^8.1.5",
    "@tailwindcss/typography": "^0.5.16",
    "antd": "^5.26.4",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.23.3",
    "glob": "^11.0.3",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash-es": "^4.17.21",
    "next": "15.3.5",
    "next-i18next": "^15.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.6.0",
    "react-intersection-observer": "^9.16.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.3.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.3.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lighthouse": "^12.8.0",
    "postcss": "^8.4.49",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sharp": "^0.33.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
